{{#with book}}

	<h1>Details for {{title}}</h1>
	<h3>Written by: </h3>
	{{#with author}}
		<p>{{name}} {{lastName}}</p>
		<p>Nationality: {{nationality}}</p>
		<img src="{{pictureUrl}}" alt="picture for {{name}} {{lastName}}" height="200px">
	{{/with}}
	<p>Summary: {{description}}</p>
	<p>Rating: {{rating}}</p>
	<a href="/books/edit/{{_id}}">Edit this book 📝</a>
	<a href="/books/delete/{{_id}}">Delete this book ❌</a>

{{/with}}

<h1>Reviews</h1>
{{!-- List the reviews --}}
{{#if book.reviews}}
	{{#each book.reviews}}
		<div>
			<p>{{text}}</p>
			<p>Added by: {{user}}</p>
		</div>
	{{/each}}
{{else}}
	<h5>No reviews yet</h5>
{{/if}}


{{!-- Add the reviews --}}
<h2>Add a review</h2>
<form action="/books/{{book._id}}/reviews" method="POST">
	<label>Name: </label>
	<input type="text" name="user" required>
	<label>Text: </label>
	<input type="text" name="text">
	<button type="submit">Add this review 🧸</button>
</form>